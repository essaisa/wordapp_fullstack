generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         Int        @id @default(autoincrement())
  username   String     @unique
  password   String
  attempts   Attempts[]
  histories  History[]
  progresses Progress[]
}

model Progress {
  id       Int      @id @default(autoincrement())
  userId   Int
  day      Int
  datetime BigInt
  user     User     @relation(fields: [userId], references: [id])
}

model Attempts {
  id        Int      @id @default(autoincrement())
  userId    Int
  attemptNo Int
  user      User     @relation(fields: [userId], references: [id])
}

model History {
  id           Int      @id @default(autoincrement())
  userId       Int
  historyRec   Json   
  user         User     @relation(fields: [userId], references: [id])
}